<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_volley"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical">

    <include layout="@layout/layout_title_frame"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <Button
                android:text="Get请求"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:id="@+id/volley_get_btn" />

            <Button
                android:text="Post请求"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/volley_post_btn" />
            <Button
                android:text="ImageRequest加载图片"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/volley_imagerequest_btn" />
            <Button
                android:text="ImageLoader加载图片"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/volley_imageloader_btn" />
            <Button
                android:text="NetWorkImageView加载图片"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/volley_networkimageview_btn" />

            <TextView
                android:id="@+id/volley_get_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                />

            <TextView
                android:id="@+id/volley_post_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                />

            <ImageView
                android:id="@+id/volley_imagerequest_iv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scaleType="fitXY"
                android:layout_margin="5dp"/>

            <ImageView
                android:id="@+id/volley_imageloader_iv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scaleType="fitXY"
                android:layout_margin="5dp"/>

            <com.android.volley.toolbox.NetworkImageView
                android:id="@+id/volley_networkimageview_iv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"/>
        </LinearLayout>
    </ScrollView>

</LinearLayout>
