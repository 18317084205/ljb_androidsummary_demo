<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@android:color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/layout_title_frame" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:id="@+id/picasso_btn1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="加载网络图片" />

            <ImageView
                android:id="@+id/picasso_iv1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <Button
                android:id="@+id/picasso_btn2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="加载assets图片" />

            <ImageView
                android:id="@+id/picasso_iv2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/picasso_btn3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="裁剪图片" />

            <ImageView
                android:id="@+id/picasso_iv3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/picasso_btn4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="特效图片" />

            <ImageView
                android:id="@+id/picasso_iv4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>
    </ScrollView>

</LinearLayout>
